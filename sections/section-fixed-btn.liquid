<section class="btn-blk">
    {%- for block in section.blocks -%}
    <a href="{{ block.settings.link }}" class="fixed-btn" style="background: url({{ block.settings.image | img_url: 'original' }} )no-repeat center;   background-size: cover;">
    </a>
  {%- endfor -%}
</section>

{% schema %}
{
  "name": "ボタンブロック",
  "max_blocks": 2,
  "blocks": [
    {
      "type": "image",
      "name": "ボタンスライド",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "画像"
        },
        {
          "type": "url",
          "id": "link",
          "label": "ボタンリンク"
        }
      ]
    }
  ]
}
{% endschema %}
