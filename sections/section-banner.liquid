<section>
  <div class="banner-blk inner">
		{%- for block in section.blocks -%}
			<a href="{{ block.settings.link }}" class="banner-item">
				<img src="{{  block.settings.image  | img_url: 'Large' }}" srcset="{{ block.settings.image | img_url: 'Large' }}" alt="TOP  BANNER"/>
			</a>
		{%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Top Banner",
  "max_blocks": 1,
  "blocks": [
    {
      "type": "image",
      "name": "Banner Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Top Banner",
      "settings": {},
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}