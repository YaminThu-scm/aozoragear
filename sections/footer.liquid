<style type="text/css">
    
    .ft-nav {
         background-color: {{ section.settings.footer_bg }};
     }
     .footer__bottom {
         background-color: {{ section.settings.footer_bg | color_darken: 5 }};
     }
 </style>
 <footer role="contentinfo" id="footer" class="footer footer--{{ section.settings.footer_style }}">
     <div class="ft-nav">
         <div class="inner">
             <div class="logo-blk">
                 {% if section.settings.logo %}
                    <a href="{{ routes.root_url }}" class="logo">
                        <img src="{{ section.settings.logo | img_url: 'medium' }}" srcset="{{ section.settings.logo | img_url: 'original' }}"  alt="{{ section.settings.logo.alt | default: shop.name }}"/>
                    </a>
                 {% else %}
                         <a href="{{ routes.root_url }}">{{ shop.name }}</a>
                 {% endif %}
                     <p class="copyright">{{ section.settings.copyright }}</p>
                 </div>
             <div class="footer__content gnav-blk">
                 <div class="o-layout">
                     {% case section.blocks.size %}
                         {% when 1 %}
                             {%- assign grid_item_width = 'u-1/1 u-1/2@tab u-1/2@desk' -%}
                         {% when 2 %}
                             {%- assign grid_item_width = 'u-1/1 u-1/2@tab u-1/2@desk' -%}
                         {% when 3 %}
                             {%- assign grid_item_width = 'u-1/1 u-1/2@tab u-1/3@desk' -%}
                         {% when 4 %}
                             {%- assign grid_item_width = 'u-1/1 u-1/2@tab u-1/4@desk' -%}
                     {% endcase %}
 
                     {% for block in section.blocks %}
                         {% if block.type == 'linklist' %}
                             {% if linklists[block.settings.linklist].links.size > 0 %}
                                 <div class="o-layout__item" {{ block.shopify_attributes }}>
                                     <div class="footer-nav">
                                         <ul class="footer-nav__items o-list-bare">
                                             {% for link in linklists[block.settings.linklist].links %}
                                                 <li class="footer-nav__item{% if link.active %} footer-nav__item--active{% endif %}"><a href="{{ link.url }}" class="footer-nav__link">{{ link.title }}</a></li>
                                             {% endfor %}
                                         </ul>
                                     </div>
                                 </div>
                             {% endif %}
                         {% endif %}
                         {% if block.type == 'contact' %}
                             <div class="o-layout__item" {{ block.shopify_attributes }}>
                                 <div class="footer-nav">
                                     {% unless block.settings.title == blank %}
                                         <h3 class="footer-nav__title h5">{{ block.settings.title }}</h3>
                                     {% endunless %}
                                     {% if block.settings.show_email %}
                                         <p class="footer-nav__text"><a aria-label="Email" href="mailto:{{ shop.email }}" class="footer-nav__text-link">{{ shop.email }}</a></p>
                                     {% endif %}
                                     {% if block.settings.show_number %}
                                         <p class="footer-nav__text"><a aria-label="Call" href="tel:{{ shop.address.phone }}" class="footer-nav__text-link">{{ shop.address.phone }}</a></p>
                                     {% endif %}
                                     {% if block.settings.show_address %}
                                         <p class="footer-nav__text footer-nav__text--address">
                                             {{ shop.address.street }}<br/>
                                             {{ shop.address.city }} {{ shop.address.province }}<br/>
                                             {{ shop.address.zip }} {{ shop.address.country }}
                                         </p>
                                     {% endif %}
                                     {% if block.settings.show_social %}
                                         <div class="footer-nav__social-wrapper">
                                             <ul class="footer-nav__social-items o-list-bare">
                                                 {% unless settings.social_facebook_link == blank %}
                                                     <li class="footer-nav__social-item">
                                                         <a href="{{ settings.social_facebook_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                             <i class="icon icon--facebook" aria-hidden="true"></i>
                                                             <span class="icon-fallback__text">Facebook</span>
                                                         </a>
                                                     </li>
                                                 {% endunless %}
                                                 {% unless settings.social_twitter_link == blank %}
                                                     <li class="footer-nav__social-item">
                                                         <a href="{{ settings.social_twitter_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                             <i class="icon icon--twitter" aria-hidden="true"></i>
                                                             <span class="icon-fallback__text">Twitter</span>
                                                         </a>
                                                     </li>
                                                 {% endunless %}
                                                 {% unless settings.social_pinterest_link == blank %}
                                                     <li class="footer-nav__social-item">
                                                         <a href="{{ settings.social_pinterest_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                             <i class="icon icon--pinterest" aria-hidden="true"></i>
                                                             <span class="icon-fallback__text">Pinterest</span>
                                                         </a>
                                                     </li>
                                                 {% endunless %}
                                                 {% unless settings.social_instagram_link == blank %}
