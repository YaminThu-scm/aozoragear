                                                         <a href="{{ settings.social_fancy_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                             <i class="icon icon--fancy" aria-hidden="true"></i>
                                                             <span class="icon-fallback__text">Fancy</span>
                                                         </a>
                                                     </li>
                                                 {% endunless %}
                                                 {% unless settings.social_untappd_link == blank %}
                                                     <li class="footer-nav__social-item">
                                                         <a href="{{ settings.social_untappd_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                             <i class="icon icon--untappd" aria-hidden="true"></i>
                                                             <span class="icon-fallback__text">Untappd</span>
                                                         </a>
                                                     </li>
                                                 {% endunless %}
                                                 {% unless settings.social_linkedin_link == blank %}
                                                     <li class="footer-nav__social-item">
                                                         <a href="{{ settings.social_linkedin_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                             <i class="icon icon--linkedin" aria-hidden="true"></i>
                                                             <span class="icon-fallback__text">LinkedIn</span>
                                                         </a>
                                                     </li>
                                                 {% endunless %}
                                             </ul>
                                         </div>
                                     {% endif %}
 
                                 </div>
                             </div>
                         {% endif %}
                         {% if block.type == 'text' %}
                             <div class="o-layout__item" {{ block.shopify_attributes }}>
                                 <div class="footer-nav">
                                     {% unless block.settings.title == blank %}
                                         <h3 class="footer-nav__title h5">{{ block.settings.title | escape }}</h3>
                                     {% endunless %}
                                     {% unless block.settings.text == blank %}
                                         <div class="footer-nav__text rte">
                                             {{ block.settings.text }}
                                         </div>
                                     {% endunless %}
                                 </div>
                             </div>
                         {% endif %}
                         {% if block.type == 'twitter' %}
                             <div class="o-layout__item" {{ block.shopify_attributes }}>
                                 <div class="footer-nav footer-nav--tweet js-footer-tweet" data-footer-tweet-enable="{% if block.settings.username == blank %}false{% else %}true{% endif %}" data-footer-tweet-user="{{ block.settings.username }}">
                                     <div id="footer-tweet" style="display: none"></div>
                                     {% unless block.settings.title == blank %}
                                         <h3 class="footer-nav__title h5">{{ block.settings.title | escape }}</h3>
                                     {% endunless %}
                                     {% unless block.settings.username == blank %}
                                         <div class="footer-nav__text rte footer-tweet__text js-footer-tweet-text"></div>
                                         <a href="https://twitter.com/{{ block.settings.username }}" class="footer-tweet__link" target="_blank" rel="noopener">{{ block.settings.username }}</a>
                                     {% endunless %}
                                 </div>
                             </div>
                         {% endif %}
                         {% if block.type == 'image' %}
                             <div class="o-layout__item" {{ block.shopify_attributes }}>
                                 <div class="footer-nav footer-nav--image">
                                     {% unless block.settings.link == blank %}
                                         <a href="{{ block.settings.link }}" class="footer-nav__image-link">
                                     {% endunless %}
                                     {% unless block.settings.image == blank %}
                                         <img
                                             class="footer-nav__image-img"
                                             src="{{ block.settings.image | img_url: '300x' }}"
                                             srcset="
                                                 {{ block.settings.image | img_url: '180x' }} 180w {{ 180 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                                 {{ block.settings.image | img_url: '360x' }} 360w {{ 360 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                                 {{ block.settings.image | img_url: '540x' }} 540w {{ 540 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                                 {{ block.settings.image | img_url: '720x' }} 720w {{ 720 | divided_by: block.settings.image.aspect_ratio | round }}h
                                             "
                                             width="300"
                                             height="{{ 300 | divided_by: block.settings.image.aspect_ratio | round }}"
                                             alt="{{ block.settings.image.alt }}"
                                             loading="lazy"
                                             style="max-width: {{ block.settings.image_width }}px"
                                         />
                                     {% else %}
                                         {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                     {% endunless %}
                                     {% unless block.settings.link == blank %}
                                         </a>
                                     {% endunless %}
                                 </div>
                             </div>
                         {% endif %}
                         {% if block.type == 'social' %}
                             <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
                                 <div class="footer-nav footer-nav--social">
                                     {% unless block.settings.title == blank %}
                                         <h3 class="footer-nav__title h5">{{ block.settings.title | escape }}</h3>
                                     {% endunless %}
                                     <ul class="footer-nav__social-items o-list-bare">
                                         {% unless settings.social_facebook_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_facebook_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--facebook" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Facebook</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_twitter_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_twitter_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--twitter" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Twitter</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_pinterest_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_pinterest_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--pinterest" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Pinterest</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_instagram_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_instagram_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--instagram" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Instagram</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_tiktok_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_tiktok_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--tiktok" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">TikTok</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_tumblr_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_tumblr_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--tumblr" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Tumblr</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_snapchat_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_snapchat_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--snapchat" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Snapchat</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_youtube_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_youtube_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--youtube" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">YouTube</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_vimeo_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_vimeo_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--vimeo" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Vimeo</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_fancy_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_fancy_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--fancy" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Fancy</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_untappd_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_untappd_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--untappd" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">Untappd</span>
                                                 </a>
                                             </li>
                                         {% endunless %}
                                         {% unless settings.social_linkedin_link == blank %}
                                             <li class="footer-nav__social-item">
                                                 <a href="{{ settings.social_linkedin_link }}" class="footer-nav__social-link icon-fallback" target="_blank" rel="noopener">
                                                     <i class="icon icon--linkedin" aria-hidden="true"></i>
                                                     <span class="icon-fallback__text">LinkedIn</span>
