                                             </li>
                                         {% endunless %}
                                     </ul>
                                 </div>
                             </div>
                         {% endif %}
                     {% endfor %}
                 </div>
             </div>
         </div>
     </div>
     <div class="payment-blk">
         {%- if section.settings.show_payment_icons -%}
         <div class="footer__icons footer__bottom__left-item">
             {% unless shop.enabled_payment_types == empty %}
                 {%- assign payment_icons_available = 'amazon_payments,american_express,apple_pay,bitcoin,cirrus,dankort,diners_club,discover,dogecoin,dwolla,forbrugsforeningen,interac,jcb,litecoin,maestro,master,paypal,stripe,visa' | split: ',' -%}
                 <ul class="footer__icons-items o-list-bare">
                     {% for type in shop.enabled_payment_types %}
                         <li class="footer__icons-item">
                             {{ type | payment_type_svg_tag: class:'payment-icon' }}
                         </li>
                     {% endfor %}
                 </ul>
             {% endunless %}
         </div>
     {%- endif -%}
     </div>
 </footer>
 
 {% schema %}
 {
     "name": "Footer",
     "class": "js-section__footer",
     "max_blocks": 4,
     
     "settings": [
         {
             "type": "image_picker",
             "id": "logo",
             "label": "Logo image"
         },
         {
             "type": "range",
             "id": "logo_size",
             "label": "Custom logo size desktop",
             "min": 1,
             "max": 10,
             "step": 1,
             "default": 5
         },
         {
             "type": "color",
             "id": "footer_bg",
             "label": "Background color",
             "default": "#222222"
         },
         {
             "type": "select",
             "id": "footer_style",
             "label": "Text color",
             "default": "light",
             "options": [
                 {
                     "value": "light",
                     "label": "Light"
                 },
                 {
                     "value": "dark",
                     "label": "Dark"
                 }
             ]
         },
         {
             "type": "checkbox",
             "id": "show_payment_icons",
             "label": "Show payment icons",
             "default": false
         },
         {
             "type": "header",
             "content": "Country/Region Selector", 
             "info": "To add a country/region, go to your [payment settings.](/admin/settings/payments)"
         },
         {
             "type": "checkbox",
             "id": "enable_country_selector",
             "label": "Enable country/region selector",
             "default": true
         },
         {
             "type": "header",
             "content": "Language Selector",
             "info": "To add a language, go to your [language settings.](/admin/settings/languages)"
         },
         {
             "type": "checkbox",
             "id": "enable_language_selector",
             "label": "Enable language selector",
             "default": true
         },
         {
             "type": "text",
             "id": "copyright",
             "label": "Add Copyright text"
         }
     ],
     "blocks": [
         {
             "type": "linklist",
             "name": "Menu",
             "settings": [
                 {
                     "type": "text",
                     "id": "title",
                     "label": "Heading",
                     "default": "Menu"
                 },
                 {
                     "type": "link_list",
                     "id": "linklist",
                     "label": "Menu",
                     "default": "footer",
                     "info": "This menu won't show dropdown items"
                 }
             ]
         },
         {
             "type": "contact",
             "name": "Contact",
             "limit": 1,
             "settings": [
                 {
                     "type": "paragraph",
                     "content": "Edit your contact info [here](/admin/settings/general)."
                 },
                 {
                     "type": "text",
                     "id": "title",
                     "label": "Heading",
                     "default": "Contact"
                 },
                 {
                     "type": "checkbox",
                     "id": "show_email",
                     "label": "Show email",
                     "default": true
                 },
                 {
                     "type": "checkbox",
                     "id": "show_number",
                     "label": "Show phone number",
                     "default": true
                 },
                 {
                     "type": "checkbox",
                     "id": "show_address",
                     "label": "Show address",
                     "default": true
                 },
                 {
                     "type": "checkbox",
                     "id": "show_social",
                     "label": "Show social",
                     "default": true,
                     "info": "Edit content in theme 'Theme settings > Social'."
                 }
             ]
         },
         {
             "type": "social",
             "name": "Social",
             "limit": 1,
             "settings": [
                 {
                     "type": "paragraph",
                     "content": "Edit content in theme 'Theme settings > Social'."
                 },
                 {
                     "type": "text",
                     "id": "title",
                     "label": "Heading",
                     "default": "Social"
                 }
             ]
         },
         {
             "type": "text",
             "name": "Text area",
             "settings": [
                 {
                     "type": "text",
                     "id": "title",
                     "label": "Heading",
                     "default": "Text area"
                 },
                 {
                     "type": "richtext",
                     "id": "text",
                     "label": "Text",
                     "default": "<p>Add some text such as a mini biography or your mission statement.</p>"
                 }
             ]
         },
         {
             "type": "image",
             "name": "Image",
             "settings": [
                 {
                     "type": "image_picker",
                     "id": "image",
                     "label": "Image"
                 },
                 {
                     "type": "range",
                     "id": "image_width",
                     "label": "Image width",
                     "unit": "px",
                     "min": 40,
                     "max": 400,
                     "step": 10,
                     "default": 200
                 },
                 {
                     "type": "url",
                     "id": "link",
                     "label": "Link"
                 }
             ]
         },
         {
             "type": "twitter",
             "name": "Twitter",
             "settings": [
                 {
                     "type": "text",
                     "id": "title",
                     "label": "Heading",
                     "default": "Twitter"
                 },
                 {
                     "type": "text",
                     "id": "username",
                     "label": "Username",
                     "info": "Example: @shopify",
                     "default": "@shopify"
                 }
             ]
         }
     ]
