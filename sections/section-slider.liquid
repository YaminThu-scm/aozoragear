<section class="section-slider">
  <div id="loader-img">
    <div class="loader-item" style="background: url({{ section.blocks[0].settings.image | img_url: 'original' }} )no-repeat center center;   background-size: cover;"></div>
  </div>
  <div class="sec-slider">
    <div class="slider">
      {%- for block in section.blocks -%}
        <a href="{%- if block.settings.link != blank -%}{{ block.settings.link }}{% else %} # {%- endif -%}">
          <div class="slider-item" style="background: url({{ block.settings.image | img_url: 'original' }} )no-repeat center center;   background-size: cover;">
            <div class="slider-content">
              {%- if block.settings.title != blank -%}
                <div class="slider-txt">
                  {{ block.settings.title }}
                </div>
              {%- endif -%} 
            </div>
          </div>
        </a>
      {%- endfor -%}
      </div>
  </div>
</section>

{% schema %}
{
  "name": "Top Banner",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "image",
      "name": "Banner Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Banner Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Top Banner",
      "settings": {},
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}