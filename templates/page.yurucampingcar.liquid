          <div class="yurucamping-img">
            <img src="{{ 'yurucamping_img01.png' | asset_img_url: 'original' }}" srcset="{{ 'yurucamping_img01.png' | asset_img_url: 'original' }}" alt="yurucamping img"/>
          </div>
